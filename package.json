{
  "name": "qxs-bns",
  "type": "module",
  "version": "0.0.1",
  "description": "开源的组件库开发起始模板，帮助以最轻松的方式搭建功能完善的Vue3组件库，让使用者只需关注到组件的开发，无需关注繁琐的搭建配置。",
  "author": "shizhu",
  "license": "MIT",
  "keywords": [
    "components",
    "Vue3",
    "ui"
  ],
  "exports": {},
  "main": "dist/qxs-bns/lib/index.js",
  "module": "dist/qxs-bns/es/index.js",
  "types": "dist/qxs-bns/lib/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "gulp -f script/build/index.ts",
    "component:create": "esno ./utils/create/index.ts",
    "component:remove": "esno ./utils/remove/index.ts",
    "comp:create": "esno ./utils/createComponent/index.ts",
    "comp:new": "esno ./utils/createTestVue/index.ts",
    "docs:dev": "vitepress dev docs --port 8000",
    "docs:new": "esno ./utils/createVitepressComp/index.ts",
    "docs:build": "vitepress build docs",
    "lint": "pnpm run lint:tsc && pnpm run lint:eslint && pnpm run lint:stylelint",
    "lint:tsc": "vue-tsc",
    "lint:eslint": "eslint . --cache --fix",
    "lint:stylelint": "stylelint \"packages/**/*.{css,scss,vue}\" --cache --fix",
    "rm": "rm -rf **/node_modules"
  },
  "dependencies": {
    "@qxs-bns/hooks": "workspace:*",
    "@qxs-bns/utils": "workspace:*",
    "@tinymce/tinymce-vue": "^6.0.1",
    "@vitepress-demo-preview/component": "2.3.2",
    "@vitepress-demo-preview/plugin": "1.2.3",
    "@vueuse/core": "^10.11.0",
    "tinymce": "^7.2.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.25.1",
    "@qxs-bns/components": "workspace:*",
    "@stylistic/stylelint-config": "^1.0.1",
    "@types/gulp": "^4.0.17",
    "@types/gulp-autoprefixer": "^0.0.37",
    "@types/gulp-sass": "^5.0.4",
    "@vitejs/plugin-vue": "^5.1.0",
    "chalk": "^5.3.0",
    "dotenv": "^16.4.5",
    "element-plus": "2.8.0",
    "eslint": "^8.57.0",
    "esno": "^4.7.0",
    "gulp": "^5.0.0",
    "gulp-autoprefixer": "^8.0.0",
    "gulp-sass": "^5.1.0",
    "sass": "^1.77.8",
    "stylelint": "16.7.0",
    "stylelint-config-recess-order": "^5.0.1",
    "stylelint-config-standard-scss": "^13.1.0",
    "stylelint-config-standard-vue": "^1.0.0",
    "stylelint-scss": "^6.5.0",
    "sucrase": "3.35.0",
    "typescript": "^5.5.4",
    "unplugin-auto-import": "0.18.2",
    "unplugin-vue-components": "0.27.4",
    "vite": "^5.3.4",
    "vite-plugin-dts": "4.0.0-beta.1",
    "vitepress": "1.3.1",
    "vue": "^3.4.34",
    "vue-tsc": "^2.0.28"
  }
}
